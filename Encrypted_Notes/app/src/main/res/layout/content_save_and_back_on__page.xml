<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.aroner.encrypted_notes.Activities.SaveAndBackOn_Page"
    tools:showIn="@layout/app_bar_save_and_back_on__page">

    <EditText
        android:id="@+id/etText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:hint="Add your fancy headline here!"
        android:textSize="@dimen/font_size_medium"
        android:layout_marginLeft="10dp"
        android:textStyle="bold"
        android:backgroundTint="@color/colorWhite"
        android:textColorHint="@color/colorDarkGrass"
        android:textColor="@color/colorDarkGrass"/>


    <EditText
        android:id="@+id/etTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Write your text here!  Add a new tag via a hashtag"
        android:textSize="@dimen/font_size_small"
        android:layout_marginLeft="10dp"
        android:backgroundTint="@color/colorWhite"
        android:textColorHint="@color/colorBlack"
        android:textColor="@color/colorBlack"/>



</LinearLayout>
